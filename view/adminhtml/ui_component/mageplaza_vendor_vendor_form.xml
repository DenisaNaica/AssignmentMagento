<?xml version="1.0" encoding="UTF-8" ?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/
ui_configuration.xsd">
    <argument name = "data" xsi:type = "array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                mageplaza_vendor_vendor_form.vendor_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">Vendor Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name = "save_and_continue" class="Mageplaza\Vendor\Block\Adminhtml\Vendor\Edit\SaveAndContinueButton"/>
            <button name = "save" class="Mageplaza\Vendor\Block\Adminhtml\Vendor\Edit\SaveButton"/>
            <button name = "reset" class="Mageplaza\Vendor\Block\Adminhtml\Vendor\Edit\ResetButton"/>
            <button name = "delete" class="Mageplaza\Vendor\Block\Adminhtml\Vendor\Edit\DeleteButton"/>
            <button name = "back" class="Mageplaza\Vendor\Block\Adminhtml\Vendor\Edit\BackButton"/>
        </buttons>
        <namespace>mageplaza_vendor_vendor_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>mageplaza_vendor_vendor_form.vendor_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="vendor_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">
                    Magento_Ui/js/form/provider
                </item>
            </item>
        </argument>
        <settings>
            <submitUrl path="mageplaza_vendor/vendor/save"/>
        </settings>
        <dataProvider class="Mageplaza\Vendor\Model\Vendor\DataProvider" name="vendor_form_data_source">
            <settings>
                <requestFieldName>vendor_id</requestFieldName>
                <primaryFieldName>vendor_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="vendor_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">vendor</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>vendor_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">vendor</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Vendors</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">vendor</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Vendor Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="content" sortOrder="10">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Content</label>
        </settings>
        <field name="email" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">vendor</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Vendor Email</label>
                <dataScope>email</dataScope>
            </settings>
        </field>
    </fieldset>

</form>
